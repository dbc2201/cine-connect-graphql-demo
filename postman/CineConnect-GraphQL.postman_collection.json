                "query": "query Movies($filter: MovieFilterInput, $page: Int, $size: Int) {\n  movies(filter: $filter, page: $page, size: $size) {\n    content {\n      id\n      title\n      releaseYear\n      posterUrl\n      genres {\n        name\n      }\n      averageRating\n      reviewCount\n    }\n    pageInfo {\n      hasNextPage\n      hasPreviousPage\n      totalPages\n      totalElements\n    }\n  }\n}",
                "variables": "{\n  \"page\": 0,\n  \"size\": 10\n}"
              }
